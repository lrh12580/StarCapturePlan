<Page
    x:Class="StarCapturePlan.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarCapturePlan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"

    DataContext="{Binding StarViewModel,RelativeSource={RelativeSource Self}}"
    >
    <!--其它页面到该页面-->
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <!--默认的旋转门过渡特效-->
                <!--<CommonNavigationTransitionInfo/>-->
                <!--页面有种放大缩小的过渡特效-->
                <!--<SlideNavigationTransitionInfo/>-->
                <!--页面上下滑动过渡特效-->
                <ContinuumNavigationTransitionInfo/>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid
        x:Name="BackGroundGrid">


        <Grid.Resources>
            <Storyboard x:Name="storyboard">
                <DoubleAnimation Storyboard.TargetName="textblock1"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:3"
                                 AutoReverse="True"
                                 RepeatBehavior="Forever"/>
            </Storyboard>
            <Storyboard x:Name="storyboard1">
                <DoubleAnimation Storyboard.TargetName="drawGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     AutoReverse="True"
                                     RepeatBehavior="Forever"
                                     Duration="0:0:2"/>
            </Storyboard>
            <Storyboard x:Name="storyboard2">
                <DoubleAnimation Storyboard.TargetName="drawGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:1"/>
            </Storyboard>
        </Grid.Resources>


        <Grid   x:Name="BackGroundPanel"  Canvas.ZIndex="2">    
            <CaptureElement x:Name="capturePreview"  
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"    
                    Height="925"
                    Width="1380"/>
        </Grid>  
        
        
        <Grid  
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Canvas.ZIndex="3" Margin="0,10,0,0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>


          

            <TextBlock x:Name="textblock" Grid.Row="0" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <!--<TextBlock x:Name="info" Width="200" Height="200"/>-->
            <Grid x:ConnectionId='1' x:Name="drawGrid" Opacity="1" Grid.Row="1" Canvas.ZIndex="4" Margin="0,0,0,10"                         >

            </Grid>
            <TextBlock x:Name="textblock1" Grid.Row="2" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        </Grid>

        <!--<StackPanel Grid.Row="1">
            <Slider x:Name="slider" Margin="30,30,30,30" RenderTransformOrigin="0.5,0.5" Height="73" LargeChange="1" ValueChanged="slider_ValueChanged" Maximum="99">
                <Slider.Foreground>
                    <ImageBrush Stretch="Fill"/>
                </Slider.Foreground>
                <Slider.Background>
                    <ImageBrush ImageSource="Assets/jianbianseduan.png"/>
                </Slider.Background>
            </Slider>
        </StackPanel>-->


    </Grid>

    <Page.BottomAppBar>
        <CommandBar Opacity="0.1">
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='2'
                    x:Name="CollectionPage"
                    x:Uid="CollectionPage"
                                                
                    Label="我的收藏"/>
                <AppBarButton x:ConnectionId='3'
                    x:Name="SettingsAppBarButton"
                    x:Uid="SettingsAppBarButton"
                                                      
                    Label="设置"/>
                <AppBarButton x:ConnectionId='4'
                    x:Name="HelpAppBarButton"
                    x:Uid="HelpAppBarButton"
                                                  
                    Label="帮助"/>

            </CommandBar.SecondaryCommands>
            <!--<AppBarButton Icon="Accept" x:Name="knock" Label="锁定" Click="knock_Click"/>-->
            <!--<AppBarButton Icon="Clear" x:Name="Clear" Label="复原" Click="Clear_Click"  />-->
            <AppBarButton x:ConnectionId='5' Icon="Add"  x:Name="Collect" Label="收藏"                        />
        </CommandBar>
    </Page.BottomAppBar>

</Page>

